 # @package WordPress
 # @subpackage MatthieuTeyssandier
 #}

{% extends 'index.html.twig' %}

{% block content %}
	<div class="Site-container">
		<div class="row">
			<div class="col-md-4 Fade-inview" data-scroll>
				<h1 class="Site-description">{{- site.description -}}</h1>
				{{- post.content -}}
			</div>
			{% for case in case_studies %}
				<div class="{{ loop.first ? 'col-md-8' : 'col-md-4 margin-top-80' }}">
					{{-
						include(
							'components/tease-case-study.html.twig',
							{
								classes: [ loop.first ? 'is-first' : null ],
								case: {
									id: case.id,
									title: case.title,
									color: case.meta( 'color' ),
									link: case.link,
									thumbnail: case.thumbnail,
								}
							}
						)
					-}}
				</div>

				{% if 9 == loop.index %}
					<div class="col-md-4 margin-top-80">
						<p>{{- post.meta( 'biography' ).english | nl2br -}}</p>
						<p>{{- post.meta( 'biography' ).french | nl2br -}}</p>
					</div>
				{% endif %}

				{% if 10 == loop.index %}
					<div class="col-md-4 margin-top-80">
						<ul>
						{% for award in post.meta( 'awards' ) %}
							<li>{{ award.title }} {{ award.value }}</li>
						{% endfor %}
						</ul>
					</div>
				{% endif %}

			{% endfor %}
		</div>
	</div>
{% endblock %}
