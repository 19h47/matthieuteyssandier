{#
 # About Page
 #
 # @package WordPress
 # @subpackage MatthieuTeyssandier
 #}

{% extends 'index.html.twig' %}

{% block content %}

	<div class="container pb-6">
		<div class="py-10 lg:px-20 bg-gray-light rounded-xl lg:rounded-5xl">
			<header class="flex justify-center w-full">
				<ul class="flex -m-1">
					{% for social in options_theme.socials %}
						<li class="m-1">
							<a class="block text-black border-black group button" href="{{ social.link.url }}"{{ social.link.target ? ' rel="noopener norefer" target="_blank"' }}>
								<div class="overflow-hidden">
									<span
										data-text="{{ social.link.title }}"
										class="
											after:absolute
											after:top-full
											after:right-0
											after:left-0
											after:content-[attr(data-text)]
											relative
											transition-transform
											duration-800
											ease-out-quint
											inline-block
											group-hover:-translate-y-full
										"
									>
										{{- social.link.title -}}
									</span>
								</div>
							</a>
						</li>
					{% endfor %}
				</ul>
			</header>

			<div class="px-3 mt-5 mb-10 lg:my-10 lg:px-0">
				<p class="mb-10 text-xs text-center uppercase text-gray-dark">
					{{- options_theme.description.tagline | nl2br -}}
				</p>
				<p class="tracking-tight text-center text-black uppercase text-8xl">
					{{- options_theme.description.title | nl2br -}}
				</p>
			</div>

			<div class="px-3 text-center lg:px-0">
				<p class="mb-4 text-xs uppercase text-gray-dark">{{- options_theme.email.title | nl2br -}}</p>
				<p>

					<button
						class="inline-flex items-center text-white border-none button bg-red-bright"
						type="button"
						data-module-copy-button
						data-copy-button-label="{{ __( 'Copy the mail →', 'matthieuteyssandier' ) }}"
						data-copy-button-success="{{ __( 'Email copied', 'matthieuteyssandier' ) }}"
						data-copy-button-error="{{ __( 'Email not copied', 'matthieuteyssandier' ) }}"
						data-copy-button-item="{{ options_theme.email.address }}"
					>
						<div class="overflow-hidden">
							<span data-copy-button="label" data-text="{{ __( 'Copy the mail →', 'matthieuteyssandier' ) }}"
								class="
									after:absolute
									after:top-full
									after:right-0
									after:left-0
									after:content-[attr(data-text)]
									relative
									transition-transform
									duration-800
									ease-out-quint
									inline-block
									group-hover:-translate-y-full
								"
							>{{- __( 'Copy the mail →', 'matthieuteyssandier' ) -}}</span>
						</div>
					</button>
				</p>
			</div>

			<div class="px-3 mt-10 text-center lg:mt-8 lg:px-0">
				<p class="text-xs uppercase text-gray-dark">
					{{- options_theme.copyright | replace({ '{year}': "now" | date( "Y" ), '{19h47}': '<a href="https://19h47.fr" targte="_blank" rel="noopener noreferer">19h47</a>' }) -}}
				</p>
			</div>
		</div>
	</div>

{% endblock %}

{% block footer %}{% endblock %}
