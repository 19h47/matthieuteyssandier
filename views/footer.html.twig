<div class="container pb-6">
	<div class="row">
		<div class="flex flex-col items-center justify-between w-full lg:flex-row">
			<ul class="flex justify-center -m-2 lg:justify-start">
				<li class="w-1/3 m-2 lg:w-auto fade-up-inview" data-scroll>
					<a class="block border-current button" href="mailto:{{ options_theme.email.address }}" rel="noopener noreferer" target="_blank">
						{{- __( 'Mail', 'matthieuteyssandier' ) -}}
					</a>
				</li>
				{% for social in options_theme.socials %}
					<li class="w-1/3 m-2 lg:w-auto fade-up-inview" data-scroll style="transition-delay: {{ loop.index * 0.1 }}s;">
						<a class="block border-current button" href="{{ social.link.url }}"{{ social.link.target ? ' rel="noopener norefer" target="_blank"' }}>
							{{- social.link.title -}}
						</a>
					</li>
				{% endfor %}
			</ul>

			<p class="mt-6 text-xs text-center uppercase lg:text-left lg:mt-0 fade-up-inview" data-scroll style="transition-delay: {{ loop.index0 * 0.1 }}s;">
				{{- __( 'All rights reserved %s', '' ) | format( 'now' | date( 'Y' ) ) -}}
			</p>
		</div>
	</div>
</div>
