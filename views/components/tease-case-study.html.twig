{#
 # Tease: Case study
 #
 # @package WordPress
 # @subpackage MatthieuTeyssandier
 #}

{% set id = 'case-study-' ~ case.id %}

<div
	id="{{ id }}"
	class="Tease-case-study{{ classes ? ' ' ~ classes | join( ' ' ) : '' }}"
	data-module-hover
	data-hover-color="{{ case.color }}"
	data-reveal-color="{{ case.color }}"
	data-scroll
	data-scroll-call="play,Reveal"
	data-scroll-id="{{ id }}"
	data-module-reveal="{{ id }}"
>
	<a class="Tease-case-study__link" href="{{ case.link }}"{{ case.title ? " aria-label=\"#{ case.title }\"" : '' }}></a>
	<div class="Tease-case-study__body">
		<canvas data-hover="canvas" data-reveal="canvas"></canvas>
		{{- include( 'components/image.html.twig', { attributes: { style: 'opacity: 0; visibility: hidden;', 'data-reveal': 'image' }, image: case.thumbnail, size: size | default( 'large' ) } ) -}}
	</div>

	{% embed 'components/text-in-view.html.twig' %}
		{% block content %}
			<span class="Tease-case-study__title">
				{{- case.title -}}
				{{- include( 'svg/use.html.twig', { icon: 'arrow-right' }, with_context = false ) -}}
			</span>
		{% endblock %}
	{% endembed %}
</div>
