<div class="pt-32 pe-none pb-84 z-index-15 position-relative">
	<div class="Site-container">
		<div class="row">
			<div class="col-md-4 offset-md-2">
				<div class="Site-title pe-auto font-family-title d-flex align-items-center">

					<a class="me-4" href="{{ site.link }}">{{- site.title -}}</a>

					<div class="overflow-hidden Color-picker position-relative" data-module-color-picker style="width: 20px;">
						<ul class="list-style-type-none d-flex">
							{% for case in case_studies %}
								<li style="z-index: {{ ( case_studies | length ) - loop.index }};">
									<button
										class="d-block"
										type="button"
										aria-label="{{ case.title }}"
										style="background-color: {{ case.meta( 'color' ) }};"
										data-module-nav-button
										data-nav-button-color="{{ case.meta( 'color' ) }}"
										data-nav-button-function="open"
									></button>
								</li>
							{% endfor %}
						</ul>
					</div>

					<a class="ms-4" href="{{ site.link }}">{{- 'now' | date( 'Y' ) -}}</a>

				</div>
			</div>

			<div class="col-md-4">
				<div class="Socials color-yellow-dark-grayish text-uppercase pe-auto">
					<ul class="list-style-type-none">
						{% for social in socials %}
							<li><a href="{{ social.url }}">{{- social.title -}}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>

			<div class="col-md-2">
				<div class="Site-introduction text-uppercase color-yellow-dark-grayish pe-auto">
					<div>{{- __( 'Drop me a line for freelance work', 'matthieuteyssandier' ) -}}</div>
					<div class="break"><a href="mail:{{ public_email }}">{{- public_email -}}</a></div>
					<div>{{- __( 'Available in Freelance', 'matthieuteyssandier' ) -}}</div>
				</div>
			</div>
		</div>
	</div>
</div>
