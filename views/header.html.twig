<div class="Site-header">
	<div class="Site-container">
		<div class="row">
			<div class="col-md-4 offset-md-4">
				<div class="d-flex align-items-center">
					<a class="Site-title margin-right-4" href="{{ site.link }}">{{- site.title -}}</a>
					<div class="Color-picker" data-module-color-picker style="width: 20px;">
						<ul>
							{% for case in case_studies %}
								<li style="z-index: {{ ( case_studies | length ) - loop.index }};">
									<button type="button" aria-label="{{ case.title }}" style="background-color: {{ case.meta( 'color' ) }};"></button>
								</li>
							{% endfor %}
						</ul>
					</div>
					<a class="Site-title margin-left-4" href="{{ site.link }}">{{- 'now' | date( 'Y' ) -}}</a>
				</div>
			</div>

			<div class="col-md-4">
				<ul class="text-transform-uppercase">
					{% for social in socials %}
						<li><a href="{{ social.url }}">{{- social.title -}}</a></li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>
